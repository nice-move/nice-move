{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Frontend develop helper for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/nice-move/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/nice-move/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/nice-move/nice-move/issues"
  },
  "scripts": {
    "inspect": "nodemon",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc --noEmit",
    "prepare": "git config core.hooksPath .githooks",
    "test": "ava --fail-fast -c 1 --timeout 20s"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "dependencies": {
    "svgo": "^3.0.2",
    "svgo-config": "^0.5.0"
  },
  "devDependencies": {
    "@bring-it/npm": "^0.2.10",
    "ava": "^5.3.1",
    "best-shot": "^0.4.1",
    "eslint": "^8.44.0",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-log-filenames": "^1.0.6",
    "execa": "^7.1.1",
    "garou": "^0.6.11",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "stylelint": "^15.10.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "^16.15.0 || ^18.12.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base",
    "overrides": [
      {
        "excludedFiles": "*.md",
        "files": "*.*",
        "processor": "log-filenames/.js"
      }
    ],
    "plugins": [
      "log-filenames"
    ]
  },
  "nice-move": {
    "bundle": [
      "packages/init/**",
      "packages/lint/**",
      "packages/cli/**"
    ],
    "import-attributes": true,
    "import-http": true,
    "internal-regex": "^@nice-move/inspector$"
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "inspect",
    "ext": "js,cjs,mjs,json",
    "watch": [
      "./packages/**/*",
      "./tools/**/*",
      "package.json"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}